#!/usr/bin/env puma

directory '<%= @directory %>'
rackup '<%= @directory %>/config.ru'
environment '<%= @environment %>'
pidfile '/var/run/<%= @pidfile_path %>.pid'
state_path '/var/run/<%= @state_path %>_puma.state'
threads 1, 16

bind 'tcp://0.0.0.0:8080'

on_restart do
  puts 'On restart...'
end
